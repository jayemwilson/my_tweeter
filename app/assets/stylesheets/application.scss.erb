 @import "bootstrap-sprockets";
 @import "bootstrap";
 @import "font-awesome";

body {
  background: url(<%= asset_path "bg2.jpg" %>) no-repeat;
  background-size: cover;
  opacity: 50%;
  }


 /*** Navbar styling ***/
.navbar-default .navbar-brand  {
  font-family: 'Marck Script', cursive;
  font-size: 30px;
  color: rgb(29,161,242);
}

.navbar-default {
    background-color: #EBEBEB;
    border-color: rgb(29,161,242);
    border-radius: 10px;
    margin: 0px 5px 0px 5px;
}

#nav-font {
  padding-top: 20px;
  font-size: 18px;
  color: rebeccapurple;
}


/*** Images ***/
.pic-user-stats {
  height: 72px;
  width: 72px;
  border-radius: 35%;
}

.pic-user-sm {
  height: 50px;
  width: 50px;
  border-radius: 35%;
}

#pic-user-nav {
  size: 35px;
  border-radius: 50%;
}

/*** Miscellaneous ***/
#handle {
  font-size: 18px;
  color: rgb(29,161,242);
}

.user-list-wells {
  height: 300px;
}

.gray-text {
  color: gray;
}

.mtop-10 {
  margin-top: 10px;
}

.center-it {
  text-align: center;
}

.rel-pos {
  position: relative;
}

.bottom {
  position: absolute;
  bottom: 0;
  right: 0;
}

#link {
  padding-top: 25px;
  font-size: 20px;
}

.pad-bot-25 {
  padding-bottom: 25px;
}

#pad-19 {
  padding-top: 19px;
}

#pad-27 {
  padding-top: 27px;
}

.pull-right {
  text-align: right;
}